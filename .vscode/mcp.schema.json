{
    "$schema": "https://json-schema.org/draft-07/schema",
    "title": "MCP Config",
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "server": {
        "type": "string",
        "description": "Base server URL, e.g. https://api.example.com"
      },
      "apiKey": {
        "type": "string",
        "description": "API key or token"
      },
      "timeoutSeconds": {
        "type": "integer",
        "minimum": 1,
        "maximum": 300,
        "default": 30
      },
      "features": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "logging": { "type": "boolean", "default": true },
          "retry": { "type": "boolean", "default": true },
          "maxRetries": { "type": "integer", "minimum": 0, "maximum": 10, "default": 3 }
        }
      },
      "endpoints": {
        "type": "array",
        "items": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "name": { "type": "string" },
            "path": { "type": "string" },
            "method": { "type": "string", "enum": ["GET", "POST", "PUT", "DELETE", "PATCH"] }
          },
          "required": ["name", "path", "method"]
        }
      }
    },
    "required": ["server", "endpoints"]
  }